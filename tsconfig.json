{
  "compilerOptions": {
    // Default
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // Added
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "paths": {
      "react": [
        "./node_modules/@types/react"
      ],
      "~components": [
        "./src/components/index"
      ],
      "~constants/*": [
        "./src/constants/*"
      ],
      "~interfaces/*": [
        "./src/interfaces/*"
      ],
      "~svg": [
        "./src/svg/index"
      ],
      "~utils/*": [
        "./src/utils/*"
      ]
    }
  }
}